die() {
  echo "Error: $@" >&2
  exit 1
}

command -v fakeroot >/dev/null || die 'Cannot find fakeroot binary'

CHECKUPDATES_DB="${CHECKUPDATES_DB:-${TMPDIR:-/tmp}/checkup-db-${UID}}"
trap 'rm -f "$CHECKUPDATES_DB/db.lck"' INT TERM EXIT

DBPath="$(pacman-conf DBPath)"
DBPath="${DBPath:-/var/lib/pacman/}"

mkdir -p "$CHECKUPDATES_DB" || die 'Failed to create directory'
ln -sf "${DBPath}/local" "$CHECKUPDATES_DB" || die 'Failed to create symlink'
fakeroot -- pacman -Sy --dbpath "$CHECKUPDATES_DB" --logfile /dev/null &>/dev/null || die 'Failed to fetch updates'

mapfile -t updates < <(pacman -Qu --dbpath "$CHECKUPDATES_DB" 2>/dev/null | grep -v '\[.*\]')
printf '%s\n' "${updates[@]}" || exit 2
