set -e

die() {
  echo "Error: $1" >&2
  exit 1
}

command -v fakeroot >/dev/null || die 'Cannot find fakeroot binary'

CHECKUPDATES_DB="${CHECKUPDATES_DB:-${TMPDIR:-/tmp}/checkup-db-${UID}}"
DBPath="$(pacman-conf DBPath || echo /var/lib/pacman)"

trap 'rm -f "$CHECKUPDATES_DB/db.lck"' EXIT

mkdir -p "$CHECKUPDATES_DB"

[ -L "$CHECKUPDATES_DB/local" ] || ln -s "$DBPath/local" "$CHECKUPDATES_DB" || die 'Failed to link pacman database'

fakeroot pacman -Sy --dbpath "$CHECKUPDATES_DB" --logfile /dev/null &>/dev/null || die 'Failed to update package database'
pacman -Qu --dbpath "$CHECKUPDATES_DB" 2>/dev/null | grep -v '\[.*\]' || exit 2