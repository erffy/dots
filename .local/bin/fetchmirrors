#!/usr/bin/env bash

PROTOCOL="https"
PACMAN_DIR="/etc/pacman.d"
MIRRORLISTS=(
  "arch"
  "cachyos"
  "chaotic-aur"
)
SAVE_FILES=(
  "$PACMAN_DIR/mirrorlist"
  "$PACMAN_DIR/cachyos-mirrorlist"
  "$PACMAN_DIR/chaotic-mirrorlist"
)

RED="\033[31m"
GREEN="\033[32m"
YELLOW="\033[33m"
RESET="\033[0m"

if [ $EUID -ne 0 ]; then
  echo -e "${RED}This script requires root.${RESET}"
  exit 1
fi

if ! command -v rate-mirrors &>/dev/null; then
  echo -e "${RED}Error: 'rate-mirrors' is not installed. Please install it before running this script.${RESET}"
  exit 1
fi

TOTAL_MIRRORS=${#MIRRORLISTS[@]}

for i in "${!MIRRORLISTS[@]}"; do
  echo -ne "[${YELLOW}$((i + 1))/$TOTAL_MIRRORS${RESET}] ${YELLOW}Updating ${MIRRORLISTS[$i]} mirrors...${RESET}\033[0K\r"

  rate-mirrors --allow-root \
    --disable-comments-in-file \
    --protocol "$PROTOCOL" \
    --save="${SAVE_FILES[$i]}" \
    "${MIRRORLISTS[$i]}" >/dev/null 2>&1

  if [ $? -ne 0 ]; then
    echo -e "${RED}Error: Failed to update ${MIRRORLISTS[$i]} mirrors.${RESET}"
    exit 1
  fi
done

echo -e "${GREEN}All mirror lists updated successfully.${RESET}"